<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:android="http://schemas.android.com/apk/res/android"    >
    <LinearLayout
        android:id="@+id/niveles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30dp">
        <RadioGroup
            android:id="@+id/radio_group"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/rb_Facil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Facil"
                android:layout_marginRight="20dp"/>
            <RadioButton
                android:id="@+id/rb_Intermedio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Intermedio"
                android:layout_marginRight="20dp"/>
            <RadioButton
                android:id="@+id/rb_Avanzado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Avanzado"/>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jugador 1 : X"
            android:textStyle="bold"
            android:textSize="15dp"
            />
        <TextView
            android:layout_marginLeft="40dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="15dp"
            android:text="Jugador 2: O"/>
    </LinearLayout>

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:columnCount="4"
        android:orientation="vertical"
        android:padding="30dp"
        android:rowCount="3"
        tools:context="parcial1.tresenraya.com.juegotresenraya.JuegoActivity">

        <Button
            android:id="@+id/btn_uno"
            android:layout_width="@dimen/tamañoBoton"
            android:layout_height="@dimen/tamañoBoton"
            android:layout_margin="@dimen/marginBoton"
            android:background="@color/colorPrimaryLight"
            android:fontFamily="serif"
            android:textSize="50dp" />

        <Button
            android:id="@+id/btn_cuatro"
            android:layout_width="@dimen/tamañoBoton"
            android:layout_height="@dimen/tamañoBoton"
            android:layout_margin="@dimen/marginBoton"
            android:background="@color/colorPrimaryLight"
            android:fontFamily="serif"
            android:textSize="50dp" />

        <Button
            android:id="@+id/btn_siete"
            android:layout_width="@dimen/tamañoBoton"
            android:layout_height="@dimen/tamañoBoton"
            android:layout_margin="@dimen/marginBoton"
            android:background="@color/colorPrimaryLight"
            android:fontFamily="serif"
            android:textSize="50dp" />

        <Button
            android:id="@+id/btn_dos"
            android:layout_width="@dimen/tamañoBoton"
            android:layout_height="@dimen/tamañoBoton"
            android:layout_margin="@dimen/marginBoton"
            android:background="@color/colorPrimaryLight"
            android:fontFamily="serif"
            android:textSize="50dp" />

        <Button
            android:id="@+id/btn_cinco"
            android:layout_width="@dimen/tamañoBoton"
            android:layout_height="@dimen/tamañoBoton"
            android:layout_margin="@dimen/marginBoton"
            android:background="@color/colorPrimaryLight"
            android:fontFamily="serif"
            android:textSize="50dp" />

        <Button
            android:id="@+id/btn_ocho"
            android:layout_width="@dimen/tamañoBoton"
            android:layout_height="@dimen/tamañoBoton"
            android:layout_margin="@dimen/marginBoton"
            android:background="@color/colorPrimaryLight"
            android:fontFamily="serif"
            android:textSize="50dp" />

        <Button
            android:id="@+id/btn_tres"
            android:layout_width="@dimen/tamañoBoton"
            android:layout_height="@dimen/tamañoBoton"
            android:layout_margin="@dimen/marginBoton"
            android:background="@color/colorPrimaryLight"
            android:fontFamily="serif"
            android:textSize="50dp" />

        <Button
            android:id="@+id/btn_seis"
            android:layout_width="@dimen/tamañoBoton"
            android:layout_height="@dimen/tamañoBoton"
            android:layout_margin="@dimen/marginBoton"
            android:background="@color/colorPrimaryLight"
            android:fontFamily="serif"
            android:textSize="50dp" />

        <Button
            android:id="@+id/btn_nueve"
            android:layout_width="@dimen/tamañoBoton"
            android:layout_height="@dimen/tamañoBoton"
            android:layout_margin="@dimen/marginBoton"
            android:background="@color/colorPrimaryLight"
            android:fontFamily="serif"
            android:textSize="50dp" />
    </GridLayout>

    <TextView
        android:id="@+id/cuenta_regresiva"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:fontFamily="casual"
        android:gravity="center"
        android:text="Contador"
        android:textSize="20dp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/reiniciar"
        android:layout_width="wrap_content"
        android:layout_height="33dp"
        android:layout_gravity="center"
        android:background="@color/colorAccent"
        android:text="Reiniciar"
        android:textColor="#fff" />
</LinearLayout>
