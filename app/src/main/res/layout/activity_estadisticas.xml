<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="2"
    android:rowCount="5"
    android:padding="30dp"
    tools:context="parcial1.tresenraya.com.juegotresenraya.EstadisticasActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Estadisticas"
        android:layout_columnSpan="2"
        android:gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:textStyle="bold"/>
    <TextView
        android:text="Partidas Ganadas Jugador 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/NumPartidasGanadas1"
        android:layout_marginLeft="30dp"
        android:text="0"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:text="Partidas Ganadas Jugador 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:id="@+id/NumPartidasGanadas2"
        android:layout_marginLeft="30dp"
        android:text="0"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:text="Partidas Ganadas Maquina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/NumPartidasGanadasMaquina"
        android:layout_marginLeft="30dp"
        android:text="0"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:text="Partidas Terminadas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/NumPartidasCerradas"
        android:layout_marginLeft="30dp"
        android:text="0"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"/>
    <TextView
        android:textStyle="bold"
        android:text="Total Partidas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/NumPartidas"
        android:layout_marginLeft="30dp"
        android:text="0"
        android:textAlignment="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</GridLayout>
